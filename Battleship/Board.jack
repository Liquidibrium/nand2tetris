    method bool shootCell(int i,int j) {
        var int pos ;
        if (~inBounds(i,j)) {
            return true;
        }
        let pos = loc + i + (j*512);
        if(grid.get(i,j) = 0) {
            do grid.set(2,i,j);
            if(~player) {
                do Front.drawXPoint(pos);
            }
            if(player) {
                do Front.drawX(pos);
            }
 
            return false;
        }

        if(grid.get(i,j) = 1) {
            do grid.set(3,i,j);
            if(~player){
                do Front.drawBlackCircleWithPoint(pos);
            }
            if(player){
                do Front.drawBlackCircle(pos);
            }
            if (checkIfBlownUp(i,j)) {
                let countShips = countShips - 1;
                do blowUp(i,j);
            }
            // return true;
        }

        // if(grid.get(i,j) = 2) {
