            if (grid.get(i+di,j + dj) = 1) {
                return false;
            }
            if(grid.get(i+di,j + dj) = 0){
                let noBreak = false;
            }
            if(grid.get(i+di,j + dj) = 2){
                let noBreak = false;
            }
            let di = di - 1;
        }
         
        let di = 0;
        let dj = 1;
        let noBreak = true;
        while(noBreak & inBounds(i+di,j+dj)) {
            if (grid.get(i+di,j + dj) = 1) {
                return false;
            }
            if(grid.get(i+di,j + dj) = 0){
                let noBreak = false;
            }
            if(grid.get(i+di,j + dj) = 2){
                let noBreak = false;
            }
            let dj = dj + 1;
        }

        let di = 0;
        let dj = -1;
        let noBreak = true;
        while(noBreak & inBounds(i+di,j+dj)) {
            if (grid.get(i+di,j + dj) = 1) {
                return false;
            }
            if(grid.get(i+di,j + dj) = 0){
                let noBreak = false;
            }
            if(grid.get(i+di,j + dj) = 2){
                let noBreak = false;
            }
            let dj = dj - 1;
        }
        return true;
    }

    method int getPosition(int i , int j){
        return loc + i + (j*512);
    }

